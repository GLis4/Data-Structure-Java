package aulas.estrutura_dados.desafio.pilhas;

import java.util.Stack;

public class SimbolosBalanceados {

	public static void main(String[] args) {
		String spli = "((A))";
		String[] splitted = spli.split("()");
		System.out.println(splitted[4]);
		Stack<String> stack = new Stack<String>();
		
		int o = 0;
		int p = 0;
		
		for(int i = 0; i < spli.length()-1; i++) {
			
			stack.push(splitted[i].toString());
			
			if (stack.pop().equals("(")) {
				o++; 
			}else if(stack.pop().equals(")")) {
				p++;
			}
		}
		
		if(o==p) {
			System.out.println("balanced");
		}
		
	}

}

