package aulas.estrutura_dados.desafio.pilhas;

public class Palindromo {

	public static void main(String[] args) {
		String exemplo = "pá";
		String reverted = new StringBuffer(exemplo).reverse().toString();
		
		if(exemplo.equals(reverted)) System.out.println("é palindromo");
		else System.out.println("não é palindromo");
	}
}
