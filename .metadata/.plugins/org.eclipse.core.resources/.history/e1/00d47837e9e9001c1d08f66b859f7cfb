package aulas.estrutura_dados.desafio.pilhas;

import java.util.Scanner;
import java.util.Stack;

public class Biblioteca {
	public static Stack<Livro> livros = new Stack<Livro>();
	public static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		int op = -1;
		while(op!= 0) {
			op = Integer.parseInt(sc.nextLine());
			switch (op) {
			case 1:
				inserir();
			case 2: 
				System.out.println("selecione o livro que quer visualizar");
				int op1 = Integer.parseInt(sc.nextLine());
				mostrar(op1);
			
			}
		}
	}

	public static void inserir() {

		Livro livro = new Livro();
		livro.nome = sc.nextLine();
		livro.isbn = Integer.parseInt(sc.nextLine());
		livro.lancamento = Integer.parseInt(sc.nextLine());
		livro.autor = sc.nextLine();
		livros.add(livro);
	}

	public static void mostrar(int op) {

		livros.get(op);

	}
}

